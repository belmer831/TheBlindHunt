{
	"compilerOptions": {
		"outDir": "dist",
		"rootDirs": [ "src" ],
		
		"module": "es2015",
		"moduleResolution": "node",
		"target": "es2015",

		"jsx": "react-native",
		"jsxFactory": "React.createElement",

		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,

		"noImplicitAny": true,
		"noImplicitReturns": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"strict": true,
		"strictNullChecks": true
	},
	"include": [ "src" ]
}