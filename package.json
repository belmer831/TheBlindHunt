{
	"name": "the-blind-hunt",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"start": "node node_modules/react-native/local-cli/cli.js start",
		"test": "jest",
		"build": "tsc",
		"watch": "tsc -w",
		"lint": "tslint -p .",
		"bundle": "react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res",
		"android": "yarn run build && yarn run force-android",
		"force-android": "yarn run clean-android && yarn run bundle && react-native run-android",
		"clean-android": "cd android && ./gradlew clean && cd .."
	},
	"dependencies": {
		"lodash": "^4.17.5",
		"moment": "^2.22.0",
		"react": "^16.3.1",
		"react-native": "^0.55.1",
		"react-native-elements": "^0.19.1",
		"react-native-firebase": "^4.0.0",
		"react-native-google-signin": "^0.12.0",
		"react-native-keyboard-spacer": "^0.4.1",
		"react-native-loading-spinner-overlay": "^0.5.2",
		"react-native-maps": "^0.21.0",
		"react-native-redux-listener": "^0.3.0",
		"react-native-router-flux": "^4.0.0-beta.28",
		"react-native-sensors": "^2.4.2",
		"react-native-simple-compass": "^1.0.0",
		"react-native-svg": "^6.3.1",
		"react-native-vector-icons": "^4.6.0",
		"react-navigation": "^1.5.11",
		"react-redux": "^5.0.7",
		"redux": "^3.7.2",
		"redux-thunk": "^2.2.0"
	},
	"devDependencies": {
		"@types/lodash": "^4.14.106",
		"@types/react": "^16.3.5",
		"@types/react-native": "^0.52.24",
		"@types/react-native-google-signin": "^0.12.1",
		"@types/react-native-loading-spinner-overlay": "^0.5.0",
		"@types/react-navigation": "^1.5.5",
		"@types/react-redux": "^5.0.15",
		"babel-jest": "22.4.3",
		"babel-preset-react-native": "4.0.0",
		"jest": "22.4.3",
		"node": "^9.11.0",
		"react-test-renderer": "^16.3.1",
		"tslint": "^5.9.1",
		"typescript": "^2.8.1"
	},
	"jest": {
		"preset": "react-native"
	}
}
